<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >



    <ImageView
        android:id="@+id/iv_type7"
        android:layout_width="120dp"
        android:layout_height="80dp" />

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="bianxingjinggnagsdasdasdasdasdasda"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/tv_type7_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"

                />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="1"
                    android:text="影视怪蜀黎"
                    android:textSize="14sp"
                    android:id="@+id/tv_type7_laiyuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center_vertical"
                    android:text="100"
                    android:textSize="14sp"
                    android:id="@+id/tv_type7_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="100"
                    android:textSize="14sp"
                    android:id="@+id/tv_type7_pinglu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View


        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#44999999"
        ></View>
</LinearLayout>