<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title_film"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@android:color/holo_blue_dark">
        <TextView
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ui"/>
        <com.flyco.tablayout.SlidingTabLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/tl_1"
            android:layout_width="210dp"
            android:layout_height="48dp"
            tl:tl_indicator_margin_top="0dp"
            tl:tl_indicator_margin_bottom="0dp"
            android:background="@drawable/tab_shape"
            tl:tl_indicator_style="BLOCK"
            tl:tl_textsize="15sp"
            tl:tl_indicator_width_equal_title="true"/>
        <RelativeLayout
            android:id="@+id/vb_search"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_search"
                />
        </RelativeLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vb_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>